<VBox styleClass="background" prefHeight="1280" prefWidth="1024" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.addEditRecipeController">

    <padding>
        <Insets top="50" right="10" bottom="50" left="10" />
    </padding>
    <VBox alignment="CENTER" spacing="20">
        <TextField fx:id="nameTf" alignment="CENTER"/>
        <HBox alignment="CENTER" prefWidth="800" spacing="20">
            <TableView fx:id="ingredientsTV" prefWidth="400" prefHeight="150" items="${controller.Recipe.ingredients}">
                <columns>
                    <TableColumn text="Name" prefWidth="200">
                        <cellValueFactory><PropertyValueFactory property="ingredientName"/></cellValueFactory>
                    </TableColumn>
                    <TableColumn text="Amount (g)" prefWidth="180">
                        <cellValueFactory><PropertyValueFactory property="amount"/></cellValueFactory>
                    </TableColumn>
                </columns>
                <stylesheets>
                    <URL value="@style.css"/>
                </stylesheets>
            </TableView>
            
            <VBox spacing="10">
                <Button text="Add" fx:id="addButton" alignment="CENTER"/>
                <Button text="Delete" fx:id="deleteButton" alignment="CENTER"/>
                <Button text="Edit" fx:id="editButton" alignment="CENTER"/>
                <Button text="Save" fx:id="exitButton" onAction="#exit"/>
            </VBox>
        </HBox>  
    </VBox>

    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
