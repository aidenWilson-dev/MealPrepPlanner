<VBox styleClass="background" prefHeight="1280" prefWidth="1024" spacing="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PrepPlannerController">

    <padding>
        <Insets top="50" right="50" bottom="50" left="50" />
    </padding>

    <VBox alignment="CENTER" spacing="20">
        <ImageView fitWidth="150" fitHeight="150" > 
            <image>
                <Image url="/view/images/prepIcon.jpeg"/>
            </image>
        </ImageView>

        <Label text="Meal Prep Planner" styleClass="label-header" alignment="CENTER"/>
        <Button text="Recipe Book" fx:id="recipeButton" alignment="CENTER"/>
        <Button text="Meal Planner" fx:id="mealButton" alignment="CENTER"/>

        <HBox alignment="CENTER" >
            <Button text="Exit" fx:id="exitButton" onAction="#exit"/>
        </HBox> 
    </VBox>
    
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
</VBox>
